<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical"
    tools:context=".TermPrivacyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/agreement_logo"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_dark"
            android:layout_gravity="left" />

        <TextView
            android:id="@+id/terms_and_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/agreement_logo"
            android:text="@string/terms_and_privacy"
            android:textSize="18sp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/cek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cek"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/agree"
        android:layout_gravity="center|bottom"
        android:text="@string/button_agree"
        android:textColor="@android:color/white"
        android:theme="@style/OrangeButton"/>
</FrameLayout>

